
@model Vidly.Models.Customer
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership: @Model.MembershipType.Name</li>

    @if (@Model.BirthDate.HasValue)
    {
        <li> Birthdate: @String.Format("{0:dd/M/yyyy}", @Model.BirthDate)</li>
    }
</ul>
